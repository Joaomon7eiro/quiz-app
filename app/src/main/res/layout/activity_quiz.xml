<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/current_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorSecondary"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/current_question"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/question_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toBottomOf="@id/current_question"
        android:scaleType="centerCrop"
        android:src="@drawable/question_1" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/question_image"
        android:text="@string/question_one"
        android:layout_marginRight="24dp"
        android:background="@color/colorSecondary"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/answer_container"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/question_text"
        android:layout_marginLeft="24dp"
        android:elevation="5dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"

        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/answers_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/q1_answer_1"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:text="Roberto"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/q1_answer_2"
                android:layout_width="match_parent"
                android:text="Vikito"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/q1_answer_3"
                android:text="Deus"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/q1_answer_4"
                android:text="Não falta ninguem"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/answers_two"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

            <RadioButton
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:text="Só tocou Pablo Vittar"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_width="match_parent"
                android:text="Golden Shower"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="Tiroteio"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioButton
                android:text="Não tocou pagode"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_margin="32dp"
        android:text="@string/confirm_button"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>